
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4" >
      <h1>User form</h1>
  <%= form_for @user, url: employees_path, html: { multipart: true } do |f| %>
    <div class="field">
      <%=f.label :name%>
      <%=f.text_field :name, placeholder: "Enter name", class: 'form-control' %>
    </div></br>
    <div class="field">
      <%= f.file_field :avatar %>
      </div></br>
    <div class="field">
      <%=f.label :sur_name%>
      <%=f.text_field :sur_name, placeholder: "Enter surname", class: 'form-control' %>
    </div></br>
    <div class="field">
      <%=f.label :designation%>
      <%=f.text_field :designation, placeholder: "Enter designation", class: 'form-control' %>
    </div></br>
    <div class="field">
      <%=f.label :cell_number%>
      <%=f.number_field :cell_number, placeholder: "Enter cell number", class: 'form-control' %>
    </div></br>
    <div class="field">
      <%=f.label :employee_name%>
      <%=f.text_field :employee_name, placeholder: "Enter employee number", class: 'form-control' %>
    </div></br>
    <div class="action">
      <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
    </div>
  <% end %>
    </div>
</div>
